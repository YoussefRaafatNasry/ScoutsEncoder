<UserControl x:Class="ScoutsEncoder.NewCipherDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    
    <Grid x:Name="MainGrid">

        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="32"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="32"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="32"/>
        </Grid.ColumnDefinitions>

        <ToolBarTray Grid.Row="1" 
                     Grid.Column="1"
                     Grid.ColumnSpan="4" 
                     Margin="0 0 0 16"
                     IsLocked="True"
                     Background="Transparent">

            <ToolBar Style="{DynamicResource MaterialDesignToolBar}" Background="Transparent">

                <Button x:Name="CloseDialogButton"
                        ToolTip="Cancel"
                        ToolTipService.InitialShowDelay="1200"
                        Click="CloseDialogButton_Click">
                    <materialDesign:PackIcon Kind="Close" />
                </Button>

                <Button x:Name="AddCipherButton"
                        ToolTip="Add cipher to list"
                        ToolTipService.InitialShowDelay="1200"
                        Click="AddCipherButton_Click">
                    <materialDesign:PackIcon Kind="Tick" />
                </Button>

                <Button x:Name="SaveCipherButton"
                        ToolTip="Save cipher as file to use it again later"
                        ToolTipService.InitialShowDelay="1200"
                        Click="SaveCipherButton_Click">
                    <materialDesign:PackIcon Kind="ContentSave" />
                </Button>

                <Button x:Name="ImportCipherButton"
                        ToolTip="Import a saved cipher"
                        ToolTipService.InitialShowDelay="1200"
                        Click="ImportCipherButton_Click">
                    <materialDesign:PackIcon Kind="Import" />
                </Button>

                <TextBox x:Name="NewCipherNameTextBox"
                         Width="128"
                         FontFamily="Courier New"
                         FontSize="14"
                         FlowDirection="RightToLeft"
                         TextAlignment="Center"
                         materialDesign:HintAssist.Hint="اسم الشفرة" />

            </ToolBar>

        </ToolBarTray>

        <StackPanel Grid.Row="2" Grid.Column="4" Margin="4 0">

            <TextBox x:Name="Letter1TextBox"
                     TabIndex="1"
                     Margin="4"
                     FontFamily="Courier New"
                     FlowDirection="RightToLeft"
                     materialDesign:HintAssist.Hint="أ" />

